  <script>
    
    document.addEventListener("DOMContentLoaded", function () {
      const filters = document.getElementById("filters");
      const leftBtn = document.querySelector(".scroll-left");
      const rightBtn = document.querySelector(".scroll-right");

      // Scroll left
      leftBtn.addEventListener("click", () => {
          filters.scrollBy({ left: -200, behavior: "smooth" });
      });

      // Scroll right
      rightBtn.addEventListener("click", () => {
          filters.scrollBy({ left: 200, behavior: "smooth" });
      });

      // Function to update visibility of scroll buttons
      function updateButtons() {
          leftBtn.style.display = filters.scrollLeft > 0 ? "flex" : "none";
          rightBtn.style.display = 
              filters.scrollLeft + filters.clientWidth >= filters.scrollWidth - 1 ? "none" : "flex";
      }

      // Listen for scrolling and window resizing
      filters.addEventListener("scroll", updateButtons);
      window.addEventListener("resize", updateButtons);

      // Initial check on page load
      updateButtons();
    });

  </script>